html
  head
    title Blog Application
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/css/bootstrap.min.css" integrity="sha384-AysaV+vQoT3kOAXZkl02PThvDr8HYKPZhNT5h/CXfBThSRXQ6jW5DO2ekP5ViFdi" crossorigin="anonymous")
  body
    nav(class="navbar navbar-light bg-faded")
      a(class="navbar-brand" href="/") Home
      //- a(class="navbar-brand" href="admin/login") Admin panel

      if sponsor
        a(href="/logout" style="margin-left:5px" class="btn btn-primary float-xs-right") Logout
        a(href="books/new" style="margin-left:5px" class="btn btn-success float-xs-right") Add book
        a(href="my-posts" style="margin-left:5px" class="btn btn-warning float-xs-right") My profile
        p(style="margin-left:5px" class="btn btn-warning float-xs-right") Welcome back, #{sponsor.name}!

      if reader
        a(href="/logout" style="margin-left:5px" class="btn btn-primary float-xs-right") Logout
        a(href="my-posts" style="margin-left:5px" class="btn btn-warning float-xs-right") My profile
        p(style="margin-left:5px" class="btn btn-warning float-xs-right") Welcome back, #{reader.name}!

      else
        a(href="admin/users/sponsor" style="margin-left:5px" class="btn btn-primary float-xs-right") Register as a sponsor
        a(href="admin/users/reader" style="margin-left:5px" class="btn btn-info float-xs-right") Register as a reader
        //- a(href="admin/users/new" style="margin-left:5px" class="btn btn-info float-xs-right") Register
        a(href="admin/login-reader" style="margin-left:5px" class="btn btn-success float-xs-right") Login as reader
        a(href="admin/login-sponsor" style="margin-left:5px" class="btn btn-success float-xs-right") Login as sponsor


      //- a(href="admin/posts/new" style="margin-left:5px" class="btn btn-success float-xs-right") Create new post

    block content
