extends ../application.pug

block content
  .container
      .row
        .col-xs-12.col-md-8
          form(action='/admin/posts/' + post.id, method='POST')
            input(type='hidden', name='_method', value='PUT')
            .form-group
              label Book Title:
              input.form-control(type='text', name='title', value=post.title)
            .form-group
              label Post Slug:
              input.form-control(type='text', name='slug', value=post.slug)
            .form-group
              label Post Description:
              textarea.form-control(type='text', rows='20', name='description' value=post.description)
            .form-group.text-xs-right
              button.btn.btn-success.btn-lg(type='submit') Create blog post
